# Cletus API Configuration - Example Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=1337
NODE_ENV=development

# Claude Configuration
CLAUDE_EXECUTABLE=/Users/webdevcody/.claude/local/claude
CLAUDE_MOCK_MODE=false
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_HEADLESS=true
CLAUDE_SKIP_PERMISSIONS=true
CLAUDE_OUTPUT_FORMAT=stream-json
CLAUDE_VERBOSE=false

# Storage Configuration
STORAGE_BACKEND=memory
MAX_JOBS_IN_MEMORY=1000
MAX_OUTPUT_CHUNKS=1000
PERSISTENCE_DIR=./data

# Job Processing Configuration
MAX_BATCH_SIZE=10
JOB_TIMEOUT=300000
CLEANUP_INTERVAL=3600000
RETENTION_PERIOD=86400000

# Logging Configuration
LOG_LEVEL=info
LOG_COLORIZE=true
LOG_TIMESTAMP=true

# Development/Debug Configuration
# Uncomment for additional debugging
# DEBUG=cletus:*
# VERBOSE_LOGGING=true