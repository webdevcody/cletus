# Cletus API Test Configuration
# Environment variables for testing

# Server Configuration
PORT=3338
NODE_ENV=test

# Claude Configuration (Mock Mode)
CLAUDE_MOCK_MODE=true
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_OUTPUT_FORMAT=stream-json
CLAUDE_HEADLESS=true
CLAUDE_SKIP_PERMISSIONS=true
CLAUDE_VERBOSE=false

# Storage Configuration (In-Memory)
STORAGE_BACKEND=memory
MAX_JOBS_IN_MEMORY=100
MAX_OUTPUT_CHUNKS=100

# Job Processing Configuration (Fast for Testing)
MAX_BATCH_SIZE=10
JOB_TIMEOUT=5000
RETENTION_PERIOD=60000
CLEANUP_INTERVAL=30000

# Logging Configuration (Minimal)
LOG_LEVEL=error
LOG_COLORIZE=false
LOG_TIMESTAMP=false

# Test-Specific Configuration
MOCK_RESPONSE_DELAY=10