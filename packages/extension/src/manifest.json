{
  "manifest_version": 3,
  "name": "Cletus - The Headless Claude Extension",
  "version": "0.2.0",
  "description": "Prompt your local headless Claude with page path and React components to kickstart feature work. Powered by Claude.",
  "action": {
    "default_title": "Cletus",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}