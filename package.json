{
  "name": "cletus-monorepo",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Professional Claude job management API and Chrome extension monorepo",
  "keywords": ["claude", "ai", "job-processing", "api", "batch", "chrome-extension"],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "cd packages/api && bun run dev",
    "dev:api": "cd packages/api && bun run dev",
    "dev:extension": "cd packages/extension && bun run dev",
    "start": "cd packages/api && bun run start",
    "build": "bun run build:api && bun run build:extension",
    "build:api": "cd packages/api && bun run build",
    "build:extension": "cd packages/extension && bun run build",
    "test": "cd packages/api && bun run test",
    "test:api": "cd packages/api && bun run test",
    "test:watch": "cd packages/api && bun run test:watch",
    "test:coverage": "cd packages/api && bun run test:coverage",
    "test:integration": "cd packages/api && bun run test:integration",
    "test:unit": "cd packages/api && bun run test:unit",
    "type-check": "bun run type-check:api && bun run type-check:extension",
    "type-check:api": "cd packages/api && bun run type-check",
    "type-check:extension": "cd packages/extension && bun run type-check",
    "lint": "echo 'Add linting tool here (eslint, biome, etc.)'",
    "format": "echo 'Add formatting tool here (prettier, biome, etc.)'",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/coverage"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}